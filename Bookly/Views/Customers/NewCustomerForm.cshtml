

@model Bookly.ViewModels.NewCustomerFormViewModel
@{
    ViewBag.Title = "NewCustomer";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.FirstName)
        @Html.TextBoxFor(c => c.Customer.FirstName, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.LastName)
        @Html.TextBoxFor(c => c.Customer.LastName, new  { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Address.AddressName)
        @Html.TextBoxFor(c => c.Customer.Address.AddressName, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.DOB)
        @Html.TextBoxFor(c => c.Customer.DOB, "{0:MMM d yyyy}",  new { @class = "form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)

        @Html.DropDownListFor(c => c.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes, "Id","Name"), "Choose a Subscription Plan", new { @class = "form-control"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBox("Receive updates on new book arrivals") Receive updates on new book arrivals
        </label>
    </div>
    @Html.HiddenFor(c => c.Customer.Id)
    <button type="submit" class="btn btn-primary">Save</button>
}

