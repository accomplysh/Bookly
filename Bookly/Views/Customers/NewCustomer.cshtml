@model Bookly.Models.Customer
@{
    ViewBag.Title = "NewCustomer";
}

<h2>New Customer</h2>

@using (Html.BeginForm("NewCustomer", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName)
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName)
        @Html.TextBoxFor(m => m.LastName, new  { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Address)
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control"})
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DOB)
        @Html.TextBoxFor(m => m.DOB, new { @class = "form-control"})
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBox("Receive updates on new book arrivals") Receive updates on new book arrivals
        </label>
    </div>
}

